{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules"
  ],
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },
  "events": {
    "restart": "osascript -e 'display notification \"App restarted\"'"
  },
  "env": {
    "NODE_ENV": "development",
    "PORT": 5000
  },
  "ext": "js json"
}